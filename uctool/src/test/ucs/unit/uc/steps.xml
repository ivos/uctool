<?xml version="1.0" encoding="UTF-8"?>
<uct xmlns="http://uctool.sf.net/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:h="http://www.w3.org/1999/xhtml"
	xsi:schemaLocation="
		http://uctool.sf.net/ ../../../../main/resources/xsd/uct.xsd
		http://www.w3.org/1999/xhtml http://www.w3.org/2002/08/xhtml/xhtml1-transitional.xsd
	">
	<actor name="Actor 1" code="a1"></actor>
	<uc-group primary-actor="a1" type="system" visibility="black" scope="Scope 1">
		<use-case code="steps" goal="Use case steps and extensions test">
			<success>
				<step handle="selectCustomer">User selects to create a customer.</step>
				<step handle="enterCustomerData"> User enters customer data.</step>
				<step handle="goto">
					Go to step
					<step-ref handle="end" />
					.
				</step>
				<step>
					System
					<uc-ref code="RF001">creates a new customer</uc-ref>
					.
				</step>
				<step>
					Return to step
					<step-ref handle="selectCustomer" />
					or
					<step-ref handle="goto" />
					.
				</step>
				<step handle="end">Any other step.</step>
				<step handle="stepHandle1">
					With HTML and refereces.
					<h:li>Bullet 1 in interest.</h:li>
					<h:li>Bullet 2 in interest.</h:li>
					<h:hr />
					Text under hr, a
					<uc-ref code="RF001">link to another UC &lt;b &amp; " '</uc-ref>
					,
					<uc-ref code="rfcd02">link to another UC via refcode</uc-ref>
					, a reference to step
					<step-ref handle="stepHandle1" />
					,
					<attachment-ref code="att1">attachment link &lt;b &amp; " '</attachment-ref>
					,
					<data-ref code="dt1">data link &lt;b &amp; " '</data-ref>
					,
					<req-ref code="rq1">requirement link &lt;b &amp; " '</req-ref>
					&lt;b &amp; .
				</step>
				<step>
					References within HTML:
					<h:div class="custom-class">
						Within div.
						<h:table>
							<h:tr>
								<h:td>
									Within table cell. A
									<uc-ref code="RF001">link to another UC &lt;b &amp; " '</uc-ref>
									,
									<uc-ref code="rfcd02">link to another UC via refcode</uc-ref>
									, a reference to step
									<step-ref handle="stepHandle1" />
									,
									<attachment-ref code="att1">attachment link &lt;b &amp; " '</attachment-ref>
									,
									<data-ref code="dt1">data link &lt;b &amp; " '</data-ref>
									,
									<req-ref code="rq1">requirement link &lt;b &amp; " '</req-ref>
									.
								</h:td>
							</h:tr>
						</h:table>
					</h:div>
				</step>
			</success>
			<extensions>
				<condition step-ref="*" />
				<condition step-ref="*" when="Ref to star, inline when" inline-step="Inline step." />
				<condition step-ref="goto" when="Ref to step, inline when">
					<step>Explicit step 1.</step>
					<step>Explicit step 2.</step>
					<step>Explicit step 3.</step>
				</condition>
				<condition step-ref="selectCustomer">
					<when>Explicit when</when>
					<step>Explicit step 1.</step>
					<step>Explicit step 2.</step>
					<step>Explicit step 3.</step>
				</condition>
				<condition step-ref="enterCustomerData" inline-step="Inline step.">
					<when>Explicit when</when>
				</condition>
				<condition step-ref="*" when="Multiple inline refs to star c" />
				<condition step-ref="*" when="Multiple inline refs to star d" />
				<condition step-ref="*" when="Multiple inline refs to star e" />
				<condition step-ref="goto" when="Multiple inline refs to step b" />
				<condition step-ref="goto" when="Multiple inline refs to step c" />
				<condition step-ref="goto" when="Multiple inline refs to step d" />
				<condition step-ref="selectCustomer-goto" when="Ref to span of steps 1" />
				<condition step-ref="goto-end" when="Ref to span of steps 2" />
				<condition step-ref="goto" when="Step extensions">
					<step>Step 1.</step>
					<step>Step 2.</step>
					<step-extensions>
						<step-condition />
						<step-condition when="Inline when" inline-step="Inline step." />
						<step-condition>
							<when>Explicit when</when>
							<step>Explicit step 1.</step>
							<step>Explicit step 2.</step>
							<step>Explicit step 3.</step>
						</step-condition>
						<step-condition inline-step="Inline step.">
							<when>Explicit when</when>
						</step-condition>
					</step-extensions>
					<step>Step 3.</step>
				</condition>
				<condition step-ref="goto" when="Multiple levels">
					<step>Step 1 1.</step>
					<step>Step 1 2.</step>
					<step-extensions>
						<step-condition />
						<step-condition when="Level 2">
							<step>Step 2 1.</step>
							<step>Step 2 2.</step>
							<step-extensions>
								<step-condition />
								<step-condition when="Level 3">
									<step>Step 3 1.</step>
									<step>Step 3 2.</step>
									<step-extensions>
										<step-condition />
										<step-condition when="Level 4">
											<step>Step 4 1.</step>
											<step>Step 4 2.</step>
											<step-extensions>
												<step-condition />
												<step-condition when="Level 5">
													<step>Step 5 1.</step>
													<step>Step 5 2.</step>
													<step>Step 5 3.</step>
												</step-condition>
												<step-condition />
											</step-extensions>
											<step>Step 4 3.</step>
										</step-condition>
										<step-condition />
									</step-extensions>
									<step>Step 3 3.</step>
								</step-condition>
								<step-condition />
							</step-extensions>
							<step>Step 2 3.</step>
						</step-condition>
						<step-condition />
					</step-extensions>
					<step>Step 1 3.</step>
				</condition>
				<condition step-ref="*">
					<when>
						References in condition when,
						a reference to step
						<step-ref handle="stepHandle1" />
						,
						<attachment-ref code="att1">attachment link &lt;b &amp; " '</attachment-ref>
						,
						<data-ref code="dt1">data link &lt;b &amp; " '</data-ref>
						,
						<req-ref code="rq1">requirement link &lt;b &amp; " '</req-ref>
						.
					</when>
					<step>
						References in condition step,
						<uc-ref code="RF001">reference to other use case &lt;b &amp; " '</uc-ref>
						,
						<uc-ref code="rfcd02">link to another UC via refcode</uc-ref>
						, a reference to step
						<step-ref handle="stepHandle1" />
						,
						<attachment-ref code="att1">attachment link &lt;b &amp; " '</attachment-ref>
						,
						<data-ref code="dt1">data link &lt;b &amp; " '</data-ref>
						,
						<req-ref code="rq1">requirement link &lt;b &amp; " '</req-ref>
						.
					</step>
					<step-extensions>
						<step-condition>
							<when>
								References in step condition when,
								a reference to step
								<step-ref handle="stepHandle1" />
								,
								<attachment-ref code="att1">attachment link &lt;b &amp; " '</attachment-ref>
								,
								<data-ref code="dt1">data link &lt;b &amp; " '</data-ref>
								,
								<req-ref code="rq1">requirement link &lt;b &amp; " '</req-ref>
								.
							</when>
							<step>
								References in step condition step,
								<uc-ref code="RF001">reference to other use case &lt;b &amp; " '</uc-ref>
								,
								<uc-ref code="rfcd02">link to another UC via refcode</uc-ref>
								, a reference to step
								<step-ref handle="stepHandle1" />
								,
								<attachment-ref code="att1">attachment link &lt;b &amp; " '</attachment-ref>
								,
								<data-ref code="dt1">data link &lt;b &amp; " '</data-ref>
								,
								<req-ref code="rq1">requirement link &lt;b &amp; " '</req-ref>
								.
							</step>
						</step-condition>
					</step-extensions>
				</condition>
			</extensions>
		</use-case>
	</uc-group>

	<attachment-group directory="att-dir1" name="">
		<attachment name="Att 1 name" code="att1" file-name="att1-file-name" />
	</attachment-group>
	<data-structure name="Dt 1 name" code="dt1"></data-structure>
	<requirement name="Rq 1 name" code="rq1"></requirement>
	<uc-group primary-actor="a1">
		<use-case goal="Referenced UC" code="RF001"></use-case>
		<use-case goal="Referenced UC 2" code="RF002"></use-case>
		<use-case goal="UC referenced via refcode" code="RF003" refcode="rfcd02"></use-case>
	</uc-group>

</uct>
