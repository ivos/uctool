<?xml version="1.0" encoding="UTF-8"?>
<uct xmlns="http://uctool.sf.net/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:h="http://www.w3.org/1999/xhtml"
	xsi:schemaLocation="
		http://uctool.sf.net/ ../../../../main/resources/xsd/uct.xsd
		http://www.w3.org/1999/xhtml http://www.w3.org/2002/08/xhtml/xhtml1-transitional.xsd
	">
	<actor name="Actor 1" code="a1"></actor>
	<uc-group primary-actor="a1" type="system" visibility="black" scope="Scope 1">
		<use-case code="steps" goal="Use case steps and extensions test">
			<success>
				<step handle="selectCustomer">User selects to create a customer.</step>
				<step handle="enterCustomerData"> User enters customer data.</step>
				<step handle="goto">
					Go to step
					<step-ref handle="end" />
					.
				</step>
				<step>
					System
					<uc-ref code="RF001">creates a new customer</uc-ref>
					.
				</step>
				<step>
					Return to step
					<step-ref handle="selectCustomer" />
					or
					<step-ref handle="goto" />
					.
				</step>
				<step handle="end">Any other step.</step>
				<step handle="stepHandle1">
					With HTML and refereces.
					<h:li>Bullet 1 in interest.</h:li>
					<h:li>Bullet 2 in interest.</h:li>
					<h:hr />
					Text under hr, a
					<uc-ref code="RF001">link to another UC</uc-ref>
					, a reference to step
					<step-ref handle="stepHandle1" />
					,
					<attachment-ref code="att1">attachment link</attachment-ref>
					,
					<data-ref code="dt1">data link</data-ref>
					,
					<req-ref code="rq1">requirement link</req-ref>
					.
				</step>
				<step>
					References within HTML:
					<h:div class="custom-class">
						Within div.
						<h:table>
							<h:tr>
								<h:td>
									Within table cell. A
									<uc-ref code="RF001">link to another UC</uc-ref>
									, a reference to step
									<step-ref handle="stepHandle1" />
									,
									<attachment-ref code="att1">attachment link</attachment-ref>
									,
									<data-ref code="dt1">data link</data-ref>
									,
									<req-ref code="rq1">requirement link</req-ref>
									.
								</h:td>
							</h:tr>
						</h:table>
					</h:div>
				</step>
			</success>
			<extensions>
				<condition when="Power failure" step-ref="*">
					<step>Nothing.</step>
				</condition>
				<condition when="Sun sets" step-ref="*" inline-step="Nothing too." />
				<condition step-ref="selectCustomer" when="User selects to update a customer">
					<step>
						User
						<uc-ref code="RF002">finds customer</uc-ref>
						using customer search criteria.
					</step>
					<step-extensions>
						<step-condition when="Customer not found">
							<step>User modifies customer search criteria and finds again or cancels.</step>
							<step>System performs as requested.</step>
							<step-extensions>
								<step-condition when="System error" inline-step="Failure." />
								<step-condition when="Power failure">
									<step>What then?</step>
									<step>Failure.</step>
									<step>
										Return to step
										<step-ref handle="selectCustomer" />
										or
										<step-ref handle="goto" />
										.
									</step>
									<step>Anything.</step>
									<step-extensions>
										<step-condition when="After ref-step" inline-step="Whatever." />
									</step-extensions>
								</step-condition>
							</step-extensions>
						</step-condition>
					</step-extensions>
					<step>User modifies customer data.</step>
					<step>System validates customer data and updates customer data.</step>
					<step-extensions>
						<step-condition when="Customer data validation fails">
							<step>User corrects customer data and has system update it.</step>
						</step-condition>
					</step-extensions>
				</condition>
				<condition step-ref="selectCustomer" when="User selects to delete a customer">
					<step>
						User
						<uc-ref code="RF001">finds customer</uc-ref>
						using customer search criteria.
					</step>
					<step-extensions>
						<step-condition when="Customer not found">
							<step>User modifies customer search criteria and finds again or cancels.</step>
							<step>System performs.</step>
						</step-condition>
						<step-condition when="Multiple customers found">
							<step>User modifies customer search criteria and finds again or cancels.</step>
						</step-condition>
					</step-extensions>
					<step>User confirms deleting the customer.</step>
					<step>System updates customer data.</step>
				</condition>
				<condition step-ref="goto" when="User enters other data" inline-step="Nothing." />
				<condition step-ref="goto" when="User enters yet other data">
					<step>Nothing as well.</step>
				</condition>
				<condition when="Something happens" step-ref="goto-end" inline-step="Do this." />
				<condition step-ref="goto-end">
					<when>
						When with a reference to step
						<step-ref handle="enterCustomerData" />
						and
						<data-ref code="dt1">data reference</data-ref>
					</when>
					<step>Step for when element test.</step>
					<step-extensions>
						<step-condition>
							<when>
								When in step condition with a reference to step
								<step-ref handle="enterCustomerData" />
								and
								<data-ref code="dt1">data reference</data-ref>
							</when>
							<step>Step for when element on step condition.</step>
						</step-condition>
					</step-extensions>
				</condition>
			</extensions>
		</use-case>
	</uc-group>

	<attachment-group directory="att-dir1" name="">
		<attachment name="Att 1 name" code="att1" file-name="att1-file-name" />
	</attachment-group>
	<data-structure name="Dt 1 name" code="dt1"></data-structure>
	<requirement name="Rq 1 name" code="rq1"></requirement>
	<uc-group primary-actor="a1">
		<use-case goal="Referenced UC" code="RF001"></use-case>
		<use-case goal="Referenced UC 2" code="RF002"></use-case>
	</uc-group>

</uct>
